<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="160dip"
        android:id="@+id/blankLayout"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:id="@+id/queueEmptyTextview"
            android:padding="20dip"
            android:textColor="@color/white"
            android:gravity="center"
            android:visibility="gone"/>
    </ScrollView>

    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/emptyRefresh"
        android:layout_below="@id/blankLayout"
        android:layout_marginTop="-20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-5dp"
            android:scrollbars="none">
            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                card_view:cardElevation="2dip">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:id="@+id/queueReadyLayout"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:text="This delta"
                        android:textColor="@color/colorAccent"
                        android:textSize="17sp"
                        android:id="@+id/queueThisDeltaText"
                        android:layout_centerHorizontal="true"/>

                    <android.support.v7.widget.CardView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:id="@+id/queueDeltaCard"
                        android:layout_below="@id/queueThisDeltaText" >
                        <RelativeLayout
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/queueDeltaPathText"
                                android:textSize="15sp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="5dp"
                                android:layout_alignParentStart="true" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/queueDeltaNameText"
                                android:textSize="17sp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:paddingBottom="10dp"
                                android:textColor="@color/colorPrimary"
                                android:layout_centerVertical="true"
                                android:layout_below="@id/queueDeltaPathText"/>
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/queueDeltaCard"
                        android:padding="20dp"
                        android:text="... will be applied to this ROM zip"
                        android:textColor="@color/colorAccent"
                        android:textSize="17sp"
                        android:id="@+id/queueToRomText"
                        android:layout_centerHorizontal="true"/>

                    <android.support.v7.widget.CardView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/queueRomCard"
                        android:layout_margin="8dp"
                        android:layout_below="@id/queueToRomText"
                        >
                        <RelativeLayout
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/queueRomPathText"
                                android:textSize="15sp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="5dp"
                                android:layout_alignParentLeft="true" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/queueRomNameText"
                                android:textSize="17sp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:paddingBottom="10dp"
                                android:textColor="@color/colorPrimary"
                                android:layout_centerVertical="true"
                                android:layout_below="@id/queueRomPathText"/>
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/queueRomCard"
                        android:padding="20dp"
                        android:text="... and will be saved as :"
                        android:textColor="@color/colorAccent"
                        android:textSize="17sp"
                        android:id="@+id/queueTargetText"
                        android:layout_centerHorizontal="true"/>

                    <android.support.v7.widget.CardView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/queueTargetCard"
                        android:layout_margin="8dp"
                        android:layout_below="@id/queueTargetText"
                        >
                        <RelativeLayout
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/queueTargetPathText"
                                android:textSize="15sp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="5dp"
                                android:layout_alignParentLeft="true" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/queueTargetNameText"
                                android:textSize="17sp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:paddingBottom="10dp"
                                android:textColor="@color/colorPrimary"
                                android:layout_centerVertical="true"
                                android:layout_below="@id/queueTargetPathText"/>
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/queueTargetCard"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="20dp">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/queueApplyButton"
                        android:text="Apply"
                        android:layout_marginRight="5dp"/>
                        </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="160dp"
                    android:id="@+id/queueNoAutoLayout"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:text="Sorry, delta auto apply is not available on this build."
                        android:padding="20dip"
                        android:layout_centerVertical="true" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</RelativeLayout>
