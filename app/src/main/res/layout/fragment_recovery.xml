<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/flashControlsView"
        android:layout_below="@id/blankLayout"
        android:layout_marginTop="-20dp">
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="6dp"
            android:elevation="2dp">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/flash_list"
                android:divider="@null"
                android:scrollbars="none"/>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/flashControlsView"
        android:background="@color/colorPrimary">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_done_white_48dp"
        android:id="@+id/flash_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="160dip"
        android:background="@color/colorPrimary"
        android:paddingBottom="20dp"
        android:scrollbars="none"
        android:id="@+id/blankLayout"
        android:overScrollMode="never"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:padding="15dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:id="@+id/about_flash"
                android:text="@string/flash_head" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/about_flash"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:id="@+id/flash_checkboxes" />
        </RelativeLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        android:theme="@style/Theme.Design.Light"
        app:srcCompat="@android:drawable/ic_input_add"
        android:layout_alignParentTop="true"
        android:layout_marginTop="117dp"
        android:id="@+id/floatingActionButton" />
</RelativeLayout>
